<%- include("partials/header.ejs") %>

<body>
   <div class="row">
      <div class="col-lg-6">
         <h1 class="new-day">
            <% let today = new Date()%>
            <% let options = { weekday:"long", year:"numeric", month:"long", day: "long"} %>
            <% let todayDay = today.getDay()%>
            <%= today.toDateString('en-us', options)%>
            <!--<h2>"Hey, <%#= name %>", what is your plan for today?"</h2>-->
         </h1>

         <ul class="list-group">
               <% for (todo of todos) { %>
                  <li class="list-group-item list-group-item-action">
                     <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="onclick" id="checkbox">
                        <p> <%= todo.text %> </p>
                     </div>
                  </li>
               <% } %>
         </ul>

      <div class="form-container">
         <form class="form-group from-control form-inline form-control-lg" id="tap" action="/" method="post">
            <div class="col">
            <input type="text" name="text" class="form-control strikethrough" id="myInput" autocomplete="off" placeholder="Tap a new task" required>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Add</button>
         </form>
      </div>

      </div>
   </div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<script src="index.ejs" type="text/javascript" charset="UTF-8"></script>
<script src="index.js" type="text/javascript" charset="UTF-8"></script>

</body>
</html>